---
// src/components/ServicesHero.astro
---
<section class="hero">
    <div class="cloud-container">
      <img src="/images/schedule_two.jpg" alt="Professional business environment" class="hero-image" />
    </div>
    <div class="content-wrapper fade-in">
      <h1 class="slide-up">Professional Web Services</h1>
      <p class="subtitle slide-up">Transforming ideas into digital experiences</p>
    </div>
  </section>
  
  <style>
    .hero {
      position: relative;
      height: calc(100vh - 6rem);
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0;
      padding: 0;
    }
  
    .cloud-container {
      position: absolute;
      inset: 0;
      z-index: 1;
    }
  
    .hero-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      opacity: 0.8;
    }
  
    .content-wrapper {
      position: relative;
      z-index: 2;
      width: min(800px, 90%);
      text-align: center;
      background: rgba(255, 255, 255, 0.9);
      padding: clamp(2rem, 5vw, 3rem);
      border-radius: 20px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }
  
    h1 {
      font-size: clamp(2rem, 5vw, 3.5rem);
      font-weight: 700;
      background: linear-gradient(45deg, #2563eb, #3b82f6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1rem;
      line-height: 1.2;
    }
  
    .subtitle {
      font-size: clamp(1rem, 2.5vw, 1.25rem);
      color: #4b5563;
      margin-bottom: 1rem;
      max-width: 600px;
      margin-inline: auto;
    }
  
    @media (max-width: 768px) {
      .content-wrapper {
        padding: 1.5rem;
        margin: 1rem;
      }
    }
  </style>
  