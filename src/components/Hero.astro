---
// src/components/Hero.astro
---
<section class="hero">
    <div class="cloud-background"></div>
    <div class="hero-content fade-in">
      <h1 class="slide-up">Web Development Services</h1>
      <p class="subtitle slide-up">Professional websites for businesses and creators</p>
      <div class="cta-buttons slide-up">
        <a href="/services" class="cta-primary">View Services</a>
        <a href="/contact" class="cta-secondary">Contact Me</a>
      </div>
    </div>
  </section>
  
  <style>
    .hero {
      position: relative;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      margin-top: -6rem;
    }
  
    .cloud-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/images/home_cloud.jpg');
      background-size: cover;
      background-position: center;
      z-index: 1;
      animation: slowZoom 20s infinite alternate ease-in-out;
    }
  
    .hero-content {
      position: relative;
      z-index: 2;
      text-align: center;
      padding: 2rem;
      max-width: 800px;
      background: rgba(255, 255, 255, 0.85);
      backdrop-filter: blur(8px);
      border-radius: 1rem;
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    }
  
    h1 {
      font-size: clamp(2rem, 5vw, 3.5rem);
      font-weight: 700;
      background: linear-gradient(45deg, #2563eb, #3b82f6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1rem;
      line-height: 1.2;
    }
  
    .subtitle {
      font-size: clamp(1rem, 2.5vw, 1.25rem);
      color: #4b5563;
      margin-bottom: 2rem;
    }
  
    .cta-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }
  
    .cta-primary, .cta-secondary {
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
    }
  
    .cta-primary {
      background: #2563eb;
      color: white;
    }
  
    .cta-secondary {
      background: rgba(255, 255, 255, 0.3);
      border: 1px solid #2563eb;
      color: #2563eb;
    }
  
    .cta-primary:hover, .cta-secondary:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(37, 99, 235, 0.15);
    }
  
    @keyframes slowZoom {
      from {
        transform: scale(1);
      }
      to {
        transform: scale(1.1);
      }
    }
  
    @media (max-width: 768px) {
      .hero {
        margin-top: -4rem;
      }
  
      .hero-content {
        padding: 1.5rem;
        margin: 0 1rem;
      }
  
      .cta-buttons {
        gap: 0.75rem;
      }
  
      .cta-primary, .cta-secondary {
        padding: 0.75rem 1rem;
      }
    }
  </style>
  