---
// src/components/Hero.astro
import { Image } from 'astro:assets';
---

<section class="hero-section">
  <Image 
    src="/images/mountain_one.jpg"
    alt="Data Consulting for Pharma"
    width={1920}
    height={1080}
    format="avif"
    quality={80}
    loading="eager"
    fetchpriority="high"
    class="hero-image"
  />
  <div class="hero-content">
    <span class="service-tag">Pharma & Healthcare Data Engineering</span>
    <h1>Enterprise Data Engineering Consulting</h1>
    <h2>Accelerate your pipeline, ensure compliance, and unlock value</h2>
    <div class="cta-wrapper">
      <a href="/contact" class="primary-cta">Book a Consultation</a>
      <a href="/projects" class="secondary-cta">See Case Studies</a>
    </div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
  }
  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 100%;
    padding: 0 20px;
    color: var(--text-color);
    z-index: 2;
  }
  .service-tag {
    display: inline-block;
    padding: 8px 16px;
    background: rgba(41, 151, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 50px;
    font-size: 1rem;
    margin-bottom: 2rem;
    color: var(--primary-color);
    font-weight: 600;
    letter-spacing: 0.08em;
  }
  h1 {
    font-size: clamp(2.2rem, 8vw, 3.7rem);
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  h2 {
    font-size: clamp(1.1rem, 5vw, 2rem);
    font-weight: 400;
    margin-bottom: 2rem;
    opacity: 0.95;
  }
  .cta-wrapper {
    display: flex;
    gap: 2rem;
    justify-content: center;
  }
  .primary-cta, .secondary-cta {
    padding: 1rem 2rem;
    border-radius: 30px;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s;
    font-weight: 600;
  }
  .primary-cta {
    background: var(--primary-color);
    color: white;
  }
  .secondary-cta {
    background: rgba(255,255,255,0.1);
    color: white;
    backdrop-filter: blur(10px);
  }
  .primary-cta:hover, .secondary-cta:hover {
    opacity: 0.8;
  }
  @media (max-width: 768px) {
    .cta-wrapper {
      flex-direction: column;
      gap: 1rem;
    }
    h1 { font-size: clamp(1.3rem, 7vw, 2.2rem);}
    h2 { font-size: clamp(0.9rem, 3vw, 1.1rem);}
  }
</style>
