---
import { Image } from 'astro:assets';
---

<section class="hero-section">
  <Image 
    src="/images/mountain_one.jpg"
    alt="Modern web design showcase"
    width={1920}
    height={1080}
    format="avif"
    quality={80}
    loading="eager"
    fetchpriority="high"
    class="hero-image"
  />
  <div class="hero-content">
    <span class="service-tag">E-commerce & Business Solutions</span>
    <h1>Transform Your Online Presence</h1>
    <h2>Custom websites that drive results</h2>
    <div class="cta-wrapper">
      <a href="/quote-form" class="primary-cta">Start Your Project</a>
      <a href="/projects" class="secondary-cta">View Portfolio</a>
    </div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 100%;
    padding: 0 20px;
    color: var(--text-color);
    z-index: 2;
  }

  .service-tag {
    display: inline-block;
    padding: 8px 16px;
    background: rgba(41, 151, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 50px;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    color: var(--primary-color);
  }

  h1 {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 600;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  h2 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 400;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .cta-wrapper {
    display: flex;
    gap: 2rem;
    justify-content: center;
  }

  .primary-cta, .secondary-cta {
    padding: 1rem 2rem;
    border-radius: 30px;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .primary-cta {
    background: var(--primary-color);
    color: white;
  }

  .secondary-cta {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    backdrop-filter: blur(10px);
  }

  @media (max-width: 768px) {
    .cta-wrapper {
      flex-direction: column;
      gap: 1rem;
    }

    h1 {
      font-size: clamp(2.5rem, 6vw, 4rem);
    }

    h2 {
      font-size: clamp(1.2rem, 3vw, 1.8rem);
    }
  }
</style>
