---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Services | Web Developer">
  <div class="services-container">
    <div class="services-header">
      <span class="service-tag">SERVICES</span>
      <h1>Choose a website package</h1>
      <p>Professional web development tailored to your needs</p>
    </div>

    <div class="services-grid">
      <div class="service-card">
        <div class="service-content">
          <h2>Basic Website</h2>
          <p class="price">From $1,800</p>
          <div class="divider"></div>
          <ul class="features">
            <li>5 Pages</li>
            <li>Responsive Design</li>
            <li>Contact Form</li>
            <li>Basic SEO</li>
          </ul>
          <a href="/quote-form?type=basic" class="cta-button">
            Get quote <span class="arrow">></span>
          </a>
        </div>
      </div>

      <div class="service-card featured">
        <div class="service-content">
          <h2>Standard Website</h2>
          <p class="price">From $3,500</p>
          <div class="divider"></div>
          <ul class="features">
            <li>Up to 10 Pages</li>
            <li>Custom Design</li>
            <li>Advanced Features</li>
            <li>SEO Optimization</li>
          </ul>
          <a href="/quote-form?type=standard" class="cta-button">
            Get quote <span class="arrow">></span>
          </a>
        </div>
      </div>

      <div class="service-card">
        <div class="service-content">
          <h2>Maintenance</h2>
          <p class="price">$150/month</p>
          <div class="divider"></div>
          <ul class="features">
            <li>Monthly Updates</li>
            <li>Hosting & Support</li>
            <li>Security Monitoring</li>
            <li>Performance Optimization</li>
          </ul>
          <a href="/quote-form?type=maintenance" class="cta-button">
            Get quote <span class="arrow">></span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <style>
    .services-container {
      min-height: 100vh;
      background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
                  url('images/mountain_four.jpg') no-repeat center center;
      background-size: cover;
      color: #f5f5f7;
      padding: 120px 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .services-header {
      text-align: center;
      margin-bottom: 60px;
      max-width: 600px;
    }

    .service-tag {
      font-size: 12px;
      letter-spacing: 0.1em;
      color: #2997ff;
      margin-bottom: 16px;
      display: block;
    }

    h1 {
      font-size: 48px;
      font-weight: 600;
      margin-bottom: 16px;
      letter-spacing: -0.003em;
    }

    .services-header p {
      font-size: 21px;
      color: #86868b;
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 24px;
      width: 100%;
      max-width: 1200px;
    }

    .service-card {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 18px;
      backdrop-filter: blur(20px);
      padding: 32px;
      transition: transform 0.3s ease;
    }

    .service-card.featured {
      background: rgba(255, 255, 255, 0.1);
      transform: scale(1.02);
    }

    .service-card:hover {
      transform: translateY(-8px);
    }

    .service-content {
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    h2 {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 8px;
    }

    .price {
      font-size: 24px;
      color: #2997ff;
      margin-bottom: 24px;
    }

    .divider {
      height: 1px;
      background: rgba(255, 255, 255, 0.1);
      margin: 24px 0;
    }

    .features {
      list-style: none;
      padding: 0;
      margin: 0 0 32px 0;
      flex-grow: 1;
    }

    .features li {
      padding: 12px 0;
      color: #86868b;
      font-size: 17px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .features li:last-child {
      border-bottom: none;
    }

    .cta-button {
      color: #2997ff;
      text-decoration: none;
      font-size: 17px;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      transition: opacity 0.3s;
      margin-top: auto;
    }

    .cta-button:hover {
      opacity: 0.7;
    }

    .arrow {
      font-size: 14px;
    }

    @media (max-width: 768px) {
      .services-container {
        padding: 80px 20px;
      }

      h1 {
        font-size: 32px;
      }

      .services-header p {
        font-size: 17px;
      }

      .services-grid {
        grid-template-columns: 1fr;
      }

      .service-card.featured {
        transform: none;
      }
    }
  </style>
</MainLayout>
