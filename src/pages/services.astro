---
import MainLayout from '../layouts/MainLayout.astro';
import ServicesHero from '../components/ServicesHero.astro';
---

<MainLayout title="Services | Web Developer">
  <ServicesHero />
  <div class="services fade-in">
    <div class="service-grid">
      <div class="service-card slide-up">
        <h3>Basic Website</h3>
        <p class="price">Starting at $1,800</p>
        <ul>
          <li>5 Pages</li>
          <li>Responsive Design</li>
          <li>Contact Form</li>
          <li>Basic SEO</li>
        </ul>
      </div>

      <div class="service-card slide-up">
        <h3>Standard Website</h3>
        <p class="price">Starting at $3,500</p>
        <ul>
          <li>Up to 10 Pages</li>
          <li>Custom Design</li>
          <li>Advanced Features</li>
          <li>SEO Optimization</li>
        </ul>
      </div>

      <div class="service-card slide-up">
        <h3>Maintenance</h3>
        <p class="price">$150/month</p>
        <ul>
          <li>Monthly Updates</li>
          <li>Hosting & Support</li>
          <li>Security Monitoring</li>
          <li>Performance Optimization</li>
        </ul>
      </div>
    </div>
  </div>

  <style>
    .services {
      max-width: 1200px;
      margin: 0 auto;
      padding-top: 2rem;
    }

    .service-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      padding: 2rem;
    }

    .service-card {
      padding: 2rem;
      text-align: center;
      border-radius: 12px;
      background: white;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .service-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      color: #1f2937;
    }

    .price {
      font-size: 1.75rem;
      color: #2563eb;
      font-weight: bold;
      margin: 1rem 0;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 1.5rem 0;
    }

    li {
      padding: 0.5rem 0;
      color: #4b5563;
    }
  </style>
</MainLayout>
