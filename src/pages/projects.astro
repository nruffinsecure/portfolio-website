---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Projects | Web Developer">
  <div class="projects-container">
    <div class="projects-header">
      <span class="projects-tag">FEATURED WORK</span>
      <h1>Recent Projects</h1>
      <p>Explore some of my latest work</p>
    </div>

    <section class="project-section">
      <div class="project-content">
        <h2>E-commerce Website</h2>
        <p class="project-description">Modern online store with a full product catalog and secure checkout process.</p>
        <div class="tech-stack">
          <span>React</span>
          <span>Node.js</span>
          <span>MongoDB</span>
        </div>
        <a href="/quote-form?type=ecommerce" class="cta-link">Want something similar? <span class="arrow">></span></a>
      </div>
      <div class="project-image">
        <img src="/images/ecommerce.jpg" alt="E-commerce Website" width="1920" height="1080" />
      </div>
    </section>

    <section class="project-section reverse">
      <div class="project-image">
        <img src="/images/portfolio.jpg" alt="Portfolio Website" width="1920" height="1080" />
      </div>
      <div class="project-content">
        <h2>Portfolio Website</h2>
        <p class="project-description">Creative showcase for professionals with a clean and minimalist design.</p>
        <div class="tech-stack">
          <span>Astro</span>
          <span>JavaScript</span>
          <span>CSS</span>
        </div>
        <a href="/quote-form?type=portfolio" class="cta-link">Looking for yours? <span class="arrow">></span></a>
      </div>
    </section>

    <section class="project-section">
      <div class="project-content">
        <h2>Business Landing Page</h2>
        <p class="project-description">Conversion-focused landing page built for lead generation.</p>
        <div class="tech-stack">
          <span>Next.js</span>
          <span>Tailwind</span>
          <span>Analytics</span>
        </div>
        <a href="/quote-form?type=landing" class="cta-link">Should we get started? <span class="arrow">></span></a>
      </div>
      <div class="project-image">
        <img src="/images/business.jpg" alt="Business Landing Page" width="1920" height="1080" />
      </div>
    </section>
  </div>

  <style>
    .projects-container {
      width: 100%;
      background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
                  url('/images/mountain_two.jpg') no-repeat center center;
      background-size: cover;
      color: #f5f5f7;
      padding: 120px 0;
    }


    .projects-header {
      text-align: center;
      margin-bottom: 80px;
      padding: 0 20px;
    }

    .projects-tag {
      font-size: 12px;
      letter-spacing: 0.1em;
      color: #2997ff;
      margin-bottom: 16px;
      display: block;
    }

    h1 {
      font-size: 48px;
      font-weight: 600;
      margin-bottom: 16px;
      letter-spacing: -0.003em;
    }

    .projects-header p {
      font-size: 21px;
      color: #86868b;
    }

    .project-section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 40px;
      max-width: 1200px;
      margin: 0 auto;
      padding: 80px 20px;
    }

    .project-section.reverse {
      direction: rtl;
    }

    .project-section.reverse .project-content {
      direction: ltr;
    }

    .project-content {
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 0 40px;
    }

    h2 {
      font-size: 32px;
      font-weight: 600;
      margin-bottom: 16px;
      letter-spacing: -0.002em;
    }

    .project-description {
      font-size: 17px;
      color: #86868b;
      margin-bottom: 24px;
      line-height: 1.5;
    }

    .tech-stack {
      display: flex;
      gap: 12px;
      margin-bottom: 32px;
      flex-wrap: wrap;
    }

    .tech-stack span {
      font-size: 12px;
      padding: 4px 12px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      color: #f5f5f7;
    }

    .project-image {
      overflow: hidden;
      border-radius: 12px;
    }

    .project-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scale(1.1);
      transition: transform 0.6s ease-out;
    }

    .project-section:hover .project-image img {
      transform: scale(1);
    }

    .cta-link {
      color: #2997ff;
      text-decoration: none;
      font-size: 17px;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      transition: opacity 0.3s;
    }

    .cta-link:hover {
      opacity: 0.7;
    }

    @media (max-width: 768px) {
      .projects-container {
        padding: 60px 0;
      }

      .projects-header {
        margin-bottom: 40px;
      }

      h1 {
        font-size: 32px;
      }

      .project-section {
        grid-template-columns: 1fr;
        padding: 40px 20px;
        gap: 24px;
      }

      .project-content {
        padding: 0;
      }

      .project-section.reverse {
        direction: ltr;
      }

      .project-image {
        order: -1;
      }
    }
  </style>
</MainLayout>
