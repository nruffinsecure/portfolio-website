---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Projects | Web Developer">
  <div class="projects-container">
    <div class="projects-header">
      <span class="projects-tag">FEATURED WORK</span>
      <h1>Recent Projects</h1>
      <p>Explore some of my latest work</p>
    </div>

    <div class="projects-grid">
      <div class="project-card">
        <div class="project-content">
          <h2>E-commerce Website</h2>
          <p class="project-description">Modern JAMstack e-commerce template focused on performance and type safety. Features include shopping cart management, checkout process, and comprehensive product catalog.</p>
          <div class="tech-stack">
            <span>Astro.js</span>
            <span>TypeScript</span>
            <span>Tailwind CSS</span>
            <span>Static SSG</span>
          </div>
          <div class="project-image">
            <img src="/images/ecommerce.jpg" alt="E-commerce Website" />
          </div>
          <div class="cta-links">
            <a href="#" class="cta-button" onclick="openDemo('https://ecommerce-template-29l.pages.dev')">
              View Demo <span class="arrow">></span>
            </a>
            <a href="/quote-form?type=ecommerce" class="cta-button">
              Want something similar? <span class="arrow">></span>
            </a>
          </div>
        </div>
      </div>

      <div class="project-card">
        <div class="project-content">
          <h2>Portfolio Website</h2>
          <p class="project-description">Creative showcase for professionals with a clean and minimalist design.</p>
          <div class="tech-stack">
            <span>Astro</span>
            <span>JavaScript</span>
            <span>CSS</span>
          </div>
          <div class="project-image">
            <img src="/images/portfolio.jpg" alt="Portfolio Website" />
          </div>
          <div class="cta-links">
            <a href="/quote-form?type=portfolio" class="cta-button">
              Looking for yours? <span class="arrow">></span>
            </a>
          </div>
        </div>
      </div>

      <div class="project-card">
        <div class="project-content">
          <h2>Business Landing Page</h2>
          <p class="project-description">Conversion-focused landing page built for lead generation.</p>
          <div class="tech-stack">
            <span>Next.js</span>
            <span>Tailwind</span>
            <span>Analytics</span>
          </div>
          <div class="project-image">
            <img src="/images/business.jpg" alt="Business Landing Page" />
          </div>
          <div class="cta-links">
            <a href="/quote-form?type=landing" class="cta-button">
              Should we get started? <span class="arrow">></span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .projects-container {
      min-height: 100vh;
      background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
                  url('/images/mountain_two.jpg') no-repeat center center;
      background-size: cover;
      color: #f5f5f7;
      padding: 120px 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .projects-header {
      text-align: center;
      margin-bottom: 60px;
      max-width: 600px;
    }

    .projects-tag {
      font-size: 12px;
      letter-spacing: 0.1em;
      color: #2997ff;
      margin-bottom: 16px;
      display: block;
    }

    h1 {
      font-size: 48px;
      font-weight: 600;
      margin-bottom: 16px;
      letter-spacing: -0.003em;
    }

    .projects-header p {
      font-size: 21px;
      color: #86868b;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 24px;
      width: 100%;
      max-width: 1200px;
    }

    .project-card {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 18px;
      backdrop-filter: blur(20px);
      padding: 32px;
      transition: transform 0.3s ease;
    }

    .project-card:hover {
      transform: translateY(-8px);
    }

    .project-content {
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    h2 {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 16px;
    }

    .project-description {
      font-size: 17px;
      color: #86868b;
      margin-bottom: 24px;
      line-height: 1.5;
    }

    .tech-stack {
      display: flex;
      gap: 8px;
      margin-bottom: 24px;
      flex-wrap: wrap;
    }

    .tech-stack span {
      font-size: 12px;
      padding: 4px 12px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      color: #f5f5f7;
    }

    .project-image {
      overflow: hidden;
      border-radius: 12px;
      margin-bottom: 24px;
      aspect-ratio: 16/9;
      height: 200px;
    }

    .project-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s ease-out;
    }

    .project-card:hover .project-image img {
      transform: scale(1.05);
    }

    .cta-links {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin-top: auto;
    }

    .cta-button {
      color: #2997ff;
      text-decoration: none;
      font-size: 17px;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      transition: opacity 0.3s;
    }

    .cta-button:hover {
      opacity: 0.7;
    }

    .arrow {
      font-size: 14px;
    }

    @media (max-width: 768px) {
      .projects-container {
        padding: 80px 20px;
      }

      h1 {
        font-size: 32px;
      }

      .projects-header p {
        font-size: 17px;
      }

      .projects-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .project-card {
        padding: 24px;
      }

      .project-image {
        height: 180px;
      }
    }
  </style>

  <script is:inline>
    function openDemo(url) {
      if (window.innerWidth <= 768) {
        window.open(url, '_blank');
      } else {
        window.open(url, '_blank');
      }
    }
  </script>
</MainLayout>
