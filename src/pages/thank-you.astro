---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Thank You | Web Developer">
  <div class="thank-you-container">
    <div class="content">
      <span class="success-tag">SUCCESS</span>
      <h1>Thank You</h1>
      <p>Your request has been submitted successfully.</p>
      <div class="cta-links">
        <a href="/" class="home-link">Return home <span class="arrow">></span></a>
        <a href="/projects" class="projects-link">View our work <span class="arrow">></span></a>
      </div>
    </div>
  </div>

  <style>
    .thank-you-container {
      width: 100%;
      min-height: 100vh;
      background: #000;
      color: #f5f5f7;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .content {
      text-align: center;
      max-width: 600px;
    }

    .success-tag {
      display: inline-block;
      padding: 0.5rem 1.5rem;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      border-radius: 50px;
      font-size: 12px;
      margin-bottom: 2rem;
      letter-spacing: 0.1em;
      color: #2997ff;
    }

    h1 {
      font-size: 48px;
      font-weight: 600;
      margin-bottom: 16px;
      letter-spacing: -0.003em;
    }

    p {
      font-size: 21px;
      color: #86868b;
      margin-bottom: 40px;
    }

    .cta-links {
      display: flex;
      gap: 32px;
      justify-content: center;
    }

    .home-link, .projects-link {
      color: #2997ff;
      text-decoration: none;
      font-size: 17px;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      transition: opacity 0.3s;
    }

    .home-link:hover, .projects-link:hover {
      opacity: 0.7;
    }

    .arrow {
      font-size: 14px;
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 32px;
      }

      p {
        font-size: 17px;
      }

      .cta-links {
        flex-direction: column;
        gap: 16px;
      }
    }
  </style>
</MainLayout>
