---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Website Requirements | Web Developer">
  <div class="form-container">
    <div class="form-header">
      <span class="form-tag">GET STARTED</span>
      <h1>Let's Build Your Website</h1>
      <p>Tell us about your project requirements</p>
    </div>

    <form action="https://formspree.io/f/mjkvovpw" method="POST" class="quote-form">
      <div class="form-section">
        <h2>Basic Information</h2>
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" required>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input type="tel" id="phone" name="phone">
        </div>
      </div>

      <div class="form-section">
        <h2>Project Details</h2>
        <div class="form-group">
          <label for="businessType">Type of Business/Project</label>
          <input type="text" id="businessType" name="businessType" placeholder="e.g., Restaurant, E-commerce, Portfolio" required>
        </div>

        <div class="form-group features-group">
          <label>Required Features</label>
          <div class="checkbox-grid">
            <label class="checkbox-item">
              <input type="checkbox" name="features[]" value="responsive">
              <span>Responsive Design</span>
            </label>
            <label class="checkbox-item">
              <input type="checkbox" name="features[]" value="contact">
              <span>Contact Form</span>
            </label>
            <label class="checkbox-item">
              <input type="checkbox" name="features[]" value="gallery">
              <span>Image Gallery</span>
            </label>
            <label class="checkbox-item">
              <input type="checkbox" name="features[]" value="blog">
              <span>Blog Section</span>
            </label>
            <label class="checkbox-item">
              <input type="checkbox" name="features[]" value="ecommerce">
              <span>E-commerce</span>
            </label>
            <label class="checkbox-item">
              <input type="checkbox" name="features[]" value="seo">
              <span>SEO Optimization</span>
            </label>
          </div>
        </div>

        <div class="form-group">
          <label for="timeline">Desired Timeline</label>
          <select id="timeline" name="timeline" required>
            <option value="">Select Timeline</option>
            <option value="1month">Within 1 month</option>
            <option value="2months">1-2 months</option>
            <option value="3months">2-3 months</option>
            <option value="flexible">Flexible</option>
          </select>
        </div>

        <div class="form-group">
          <label for="budget">Budget Range</label>
          <select id="budget" name="budget" required>
            <option value="">Select Budget Range</option>
            <option value="1000-2000">$1,000 - $2,000</option>
            <option value="2000-5000">$2,000 - $5,000</option>
            <option value="5000plus">$5,000+</option>
          </select>
        </div>

        <div class="form-group">
          <label for="message">Additional Requirements or Comments</label>
          <textarea id="message" name="message" rows="4" placeholder="Tell us more about your project needs..."></textarea>
        </div>
      </div>

      <input type="hidden" name="_next" value="/thank-you">
      <button type="submit" class="submit-button">Submit Request <span class="arrow">></span></button>
    </form>
  </div>

  <style>
    .form-container {
    width: 100%;
    min-height: 100vh;
    background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
                url('/images/mountain_five.jpg') no-repeat center center;
    background-size: cover;
    color: #f5f5f7;
    padding: 120px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    }


    .form-header {
      text-align: center;
      margin-bottom: 60px;
      max-width: 600px;
      margin: 0 auto 60px;
    }

    .form-tag {
      font-size: 12px;
      letter-spacing: 0.1em;
      color: #2997ff;
      margin-bottom: 16px;
      display: block;
    }

    h1 {
      font-size: 48px;
      font-weight: 600;
      margin-bottom: 16px;
      letter-spacing: -0.003em;
    }

    .form-header p {
      font-size: 21px;
      color: #86868b;
    }

    .quote-form {
      max-width: 680px;
      margin: 0 auto;
      padding: 40px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 18px;
      backdrop-filter: blur(20px);
    }

    .form-section {
      margin-bottom: 40px;
    }

    h2 {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 24px;
      letter-spacing: -0.002em;
    }

    .form-group {
      margin-bottom: 24px;
    }

    label {
      display: block;
      font-size: 14px;
      margin-bottom: 8px;
      color: #f5f5f7;
    }

    input, select, textarea {
      width: 100%;
      padding: 12px 16px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 9px;
      color: #f5f5f7;
      font-size: 16px;
      transition: all 0.3s ease;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: #2997ff;
      background: rgba(255, 255, 255, 0.1);
    }

    .checkbox-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
    }

    .checkbox-item {
      display: flex;
      align-items: center;
      gap: 8px;
      color: #f5f5f7;
    }

    .checkbox-item input[type="checkbox"] {
      width: 20px;
      height: 20px;
      margin: 0;
    }

    .submit-button {
      width: 100%;
      padding: 16px 32px;
      background: #2997ff;
      color: #fff;
      border: none;
      border-radius: 50px;
      font-size: 17px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      cursor: pointer;
      transition: opacity 0.3s;
      margin-top: 32px;
    }

    .submit-button:hover {
      opacity: 0.8;
    }

    .arrow {
      font-size: 14px;
    }

    @media (max-width: 768px) {
      .form-container {
        padding: 80px 20px;
      }

      h1 {
        font-size: 32px;
      }

      .form-header p {
        font-size: 17px;
      }

      .quote-form {
        padding: 24px;
      }

      .checkbox-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</MainLayout>
