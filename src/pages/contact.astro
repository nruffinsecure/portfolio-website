---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact | Web Developer">
  <div class="contact-container">
    <div class="contact-header">
      <span class="contact-tag">GET IN TOUCH</span>
      <h1>Let's discuss your project</h1>
      <p>Transform your digital presence with a custom website</p>
    </div>

    <div class="form-section">
      <form action="https://formspree.io/f/mjkvovpw" method="POST" class="contact-form">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required>
        </div>
        
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>
        </div>
        
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" required></textarea>
        </div>
        
        <button type="submit">Send Message <span class="arrow">></span></button>
      </form>
    </div>
  </div>

  <style>
.contact-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
              url('/images/mountain_three.jpg') no-repeat center center;
  background-size: cover;
  color: #f5f5f7;
  padding: 120px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}


    .contact-header {
      text-align: center;
      margin-bottom: 60px;
      max-width: 600px;
      margin: 0 auto 60px;
    }

    .contact-tag {
      font-size: 12px;
      letter-spacing: 0.1em;
      color: #2997ff;
      margin-bottom: 16px;
      display: block;
    }

    h1 {
      font-size: 48px;
      font-weight: 600;
      margin-bottom: 16px;
      letter-spacing: -0.003em;
    }

    .contact-header p {
      font-size: 21px;
      color: #86868b;
    }

    .form-section {
      max-width: 580px;
      margin: 0 auto;
      padding: 40px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 18px;
      backdrop-filter: blur(20px);
    }

    .contact-form {
      display: flex;
      flex-direction: column;
      gap: 24px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    label {
      font-size: 14px;
      color: #f5f5f7;
      font-weight: 500;
    }

    input, textarea {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 9px;
      padding: 12px 16px;
      color: #f5f5f7;
      font-size: 16px;
      transition: all 0.3s ease;
    }

    input:focus, textarea:focus {
      outline: none;
      border-color: #2997ff;
      background: rgba(255, 255, 255, 0.1);
    }

    textarea {
      resize: vertical;
      min-height: 120px;
    }

    button {
      background: #2997ff;
      color: #fff;
      border: none;
      border-radius: 50px;
      padding: 12px 32px;
      font-size: 17px;
      font-weight: 400;
      cursor: pointer;
      transition: opacity 0.3s;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      margin-top: 16px;
    }

    button:hover {
      opacity: 0.8;
    }

    .arrow {
      font-size: 14px;
    }

    @media (max-width: 768px) {
      .contact-container {
        padding: 80px 20px;
      }

      h1 {
        font-size: 32px;
      }

      .contact-header p {
        font-size: 17px;
      }

      .form-section {
        padding: 24px;
      }
    }
  </style>
</MainLayout>
