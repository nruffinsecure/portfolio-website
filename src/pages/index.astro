---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Home | Web Developer">
  <div class="hero fade-in">
    <h1 class="slide-up">Web Development Services</h1>
    <p class="subtitle slide-up">Professional websites for businesses and creators</p>
    <div class="cta-buttons slide-up">
      <a href="/services" class="cta-primary">View Services</a>
      <a href="/contact" class="cta-secondary">Contact Me</a>
    </div>
  </div>

  <style>
    .hero {
      text-align: center;
      padding: 4rem 1rem; /* Reduced side padding for mobile */
      max-width: 100%;
      overflow-x: hidden; /* Prevent horizontal scroll */
    }

    h1 {
      font-size: clamp(2rem, 5vw, 3.5rem); /* Responsive font size */
      font-weight: 700;
      background: linear-gradient(45deg, #2563eb, #3b82f6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1rem;
      padding: 0 1rem; /* Add padding for breathing room */
      line-height: 1.2; /* Improve readability */
    }

    .subtitle {
      font-size: clamp(1rem, 2.5vw, 1.25rem);
      color: #4b5563;
      margin-bottom: 2rem;
      padding: 0 1rem;
    }

    .cta-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap; /* Allow buttons to wrap on mobile */
      padding: 0 1rem;
    }

    .cta-primary, .cta-secondary {
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.2s ease;
      white-space: nowrap; /* Prevent button text from wrapping */
    }

    .cta-primary {
      background: #2563eb;
      color: white;
    }

    .cta-secondary {
      border: 1px solid #2563eb;
      color: #2563eb;
    }

    .cta-primary:hover, .cta-secondary:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(37, 99, 235, 0.15);
    }

    /* Mobile-specific adjustments */
    @media (max-width: 768px) {
      .hero {
        padding: 3rem 1rem;
      }

      .cta-buttons {
        gap: 0.75rem;
      }

      .cta-primary, .cta-secondary {
        padding: 0.75rem 1rem;
        width: auto; /* Allow buttons to size naturally */
      }
    }
  </style>
</MainLayout>